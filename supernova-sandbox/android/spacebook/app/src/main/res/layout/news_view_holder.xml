<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_view_holder_news_height">

    <View
        android:id="@+id/bg_white_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/news_view_holder_bg_white_constraint_layout_height"
        android:layout_marginTop="@dimen/news_view_holder_bg_white_constraint_layout_margin_top"
        android:background="@color/news_view_holder_bg_white_constraint_layout_background_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="30dp"/>

    <View
        android:id="@+id/bg_gray_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/news_view_holder_bg_gray_constraint_layout_height"
        android:background="@color/news_view_holder_bg_gray_constraint_layout_background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="360dp"/>

    <ImageView
        android:id="@+id/bg_news_temp_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/news_view_holder_bg_news_temp_image_view_margin_top"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_news_temp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today145_pm_text_view"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="80dp"/>

    <TextView
        android:id="@+id/spacecrunch_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/news_view_holder_spacecrunch_text_view_margin_top"
        android:fontFamily="@font/font_lato_bold"
        android:gravity="start"
        android:text="@string/news_view_holder_spacecrunch_text_view_text"
        android:textColor="@color/news_view_holder_spacecrunch_text_view_text_color"
        android:textSize="@dimen/news_view_holder_spacecrunch_text_view_text_size"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="39dp"/>

    <TextView
        android:id="@+id/today145_pm_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/news_view_holder_today145_pm_text_view_margin_top"
        android:alpha="0.4"
        android:fontFamily="@font/font_lato_regular"
        android:gravity="start"
        android:text="@string/news_view_holder_today145_pm_text_view_text"
        android:textColor="@color/news_view_holder_today145_pm_text_view_text_color"
        android:textSize="@dimen/news_view_holder_today145_pm_text_view_text_size"
        app:layout_constraintTop_toBottomOf="@+id/spacecrunch_text_view"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="59dp"/>

    <TextView
        android:id="@+id/spacewoman185k_li_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/news_view_holder_spacewoman185k_li_text_view_margin_bottom"
        android:layout_marginLeft="@dimen/news_view_holder_spacewoman185k_li_text_view_margin_start"
        android:alpha="0.4"
        android:fontFamily="@font/font_lato_regular"
        android:gravity="start"
        android:text="@string/news_view_holder_spacewoman185k_li_text_view_text"
        android:textColor="@color/news_view_holder_spacewoman185k_li_text_view_text_color"
        android:textSize="@dimen/news_view_holder_spacewoman185k_li_text_view_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/icon_like_image_view"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="381dp"/>

    <TextView
        android:id="@+id/k_comments_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/news_view_holder_k_comments_text_view_margin_bottom"
        android:layout_marginRight="@dimen/news_view_holder_k_comments_text_view_margin_end"
        android:alpha="0.4"
        android:fontFamily="@font/font_lato_regular"
        android:gravity="start"
        android:text="@string/news_view_holder_k_comments_text_view_text"
        android:textColor="@color/news_view_holder_k_comments_text_view_text_color"
        android:textSize="@dimen/news_view_holder_k_comments_text_view_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="381dp"/>

    <TextView
        android:id="@+id/melon_husk_launches_text_view"
        android:layout_width="@dimen/news_view_holder_melon_husk_launches_text_view_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/news_view_holder_melon_husk_launches_text_view_margin_bottom"
        android:layout_marginLeft="@dimen/news_view_holder_melon_husk_launches_text_view_margin_start"
        android:fontFamily="@font/font_lato_regular"
        android:gravity="start"
        android:lineSpacingMultiplier="1.18"
        android:text="@string/news_view_holder_melon_husk_launches_text_view_text"
        android:textColor="@color/news_view_holder_melon_husk_launches_text_view_text_color"
        android:textSize="@dimen/news_view_holder_melon_husk_launches_text_view_text_size"
        app:layout_constraintBottom_toTopOf="@+id/bg_gray_constraint_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="298dp"/>

    <ImageView
        android:id="@+id/icon_like_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/news_view_holder_icon_like_image_view_margin_bottom"
        android:layout_marginLeft="@dimen/news_view_holder_icon_like_image_view_margin_start"
        android:alpha="0.3"
        android:scaleType="center"
        android:src="@drawable/icon_like"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="382dp"/>

    <ImageView
        android:id="@+id/icon_comment_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/news_view_holder_icon_comment_image_view_margin_bottom"
        android:layout_marginRight="@dimen/news_view_holder_icon_comment_image_view_margin_end"
        android:alpha="0.3"
        android:scaleType="center"
        android:src="@drawable/icon_comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/k_comments_text_view"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="381dp"/>

    <ImageView
        android:id="@+id/avatar_astronaut_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/news_view_holder_avatar_astronaut_image_view_margin_start"
        android:layout_marginRight="@dimen/news_view_holder_avatar_astronaut_image_view_margin_end"
        android:layout_marginTop="@dimen/news_view_holder_avatar_astronaut_image_view_margin_top"
        android:scaleType="center"
        android:src="@drawable/avatarastronaut_11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/spacecrunch_text_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="15dp"/>
</android.support.constraint.ConstraintLayout>